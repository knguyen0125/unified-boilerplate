{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": "swc",
    "typeCheck": true,
    "deleteOutDir": true,
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "dtoFileNameSuffix": [],
          "classValidatorShim": false,
          "introspectComments": true,
          "controllerKeyOfComment": "summary"
        }
      }
    ],
    "assets": [
      {
        "include": "resources/**/*",
        "watchAssets": true
      },
      {
        "include": "**/*.hbs",
        "watchAssets": true
      },
      {
        "include": "i18n/**/*",
        "watchAssets": true
      }
    ],
    "watchAssets": true
  }
}
